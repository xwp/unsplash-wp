{
  "name": "@xwp/unsplash-wp",
  "version": "1.0.0",
  "description": "Unsplash for WordPress.",
  "author": "XWP",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/xwp/unsplash-wp/issues"
  },
  "homepage": "https://github.com/xwp/unsplash-wp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xwp/unsplash-wp.git"
  },
  "scripts": {
    "postinstall": "composer install",
    "dev": "wp-scripts start",
    "build": "wp-scripts build",
    "env:start": "docker-compose up -d",
    "env:stop": "docker-compose stop",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "eslint js/src",
    "lint:php": "composer lint",
    "format": "npm-run-all --parallel format:*",
    "format:css": "npm run lint:css -- --fix",
    "format:js": "eslint js/src --fix",
    "format:php": "composer format",
    "test": "npm-run-all --parallel test:*",
    "test:php": "npm-run-all --parallel test:php:no-coverage:*",
    "test:php:no-coverage:unit": "composer test",
    "test:php:no-coverage:integration": "composer test -- -c phpunit.integration.xml",
    "test:php:coverage": "npm-run-all --parallel test:php:coverage:*",
    "test:php:coverage:unit": "composer test -- --coverage-php tests/reports/php/unit.cov",
    "test:php:coverage:integration": "composer test -- -c phpunit.integration.xml --coverage-php tests/reports/php/integration.cov",
    "coverage": "npm-run-all --parallel coverage:*",
    "coverage:php": "composer coverage",
    "coverage:merge:php": "composer coverage-merge",
    "docker": "docker-compose run --workdir=/var/www/html/wp-content/plugins/unsplash-wp wordpress"
  },
  "devDependencies": {
    "@wordpress/block-editor": "3.5.0",
    "@wordpress/eslint-plugin": "3.3.0",
    "@wordpress/scripts": "6.2.0",
    "eslint": "6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "npm-run-all": "4.1.5",
    "stylelint-a11y": "1.2.2"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "npm run format:js",
    "*.css": "npm run format:css",
    "*.php": "./bin/phpcbf.sh"
  }
}
